@model Person
@{
    ViewData["Title"] = "Edit Person";
}

<h2>@ViewBag.title</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="FirstName" class="form-label">First name</label>
        <input asp-for="FirstName" class="form-control">@Model.FirstName</input>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="form-label">Last name</label>
        <input asp-for="LastName" class="form-control">@Model.LastName</input>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email address</label>
        <input asp-for="Email" type="email" class="form-control">@Model.Email</input>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
